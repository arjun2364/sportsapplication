
@{
    ViewData["Title"] = "Edit Athelete";
}

@model SportsApplication.Models.CreateResultModel

<form method="post">
    <div class="form-signin">
        <h2 class="form-signin-heading">CHANGE DATA FOR ATHELETE</h2>
        <div class="form-group">
            <input type="hidden" asp-for="@Model.Id" class="form-control" />
            <input type="hidden" asp-for="@Model.TestId" class="form-control" />
            <label asp-for="@Model.UserId" class="control-label"></label>
            <select asp-for="@Model.UserId" class="form-control">
                <option value="-1" selected disabled>Choose</option>
                @foreach (var item in Model.AtheleteList)
                {

                    <option value="@item.id">@item.name</option>
                }
            </select>
            <span asp-validation-for="@Model.UserId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Data"></label>
        <input type="number" asp-for="@Model.Data" class="form-control" />
        <span class="text-danger" asp-validation-for="@Model.Data"></span>
    </div>
    <button type="submit" class="btn btn-primary" asp-route-Test="@Model">Save Test</button>
</form>
<br />
<a class="btn btn-danger" asp-controller="Result" asp-action="ConfirmDeleteResult" asp-route-id="@Model.Id">Delete athelete</a>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@if (@ViewBag.message != null)
{
    <div class="alert alert-info">@ViewBag.message</div>
}