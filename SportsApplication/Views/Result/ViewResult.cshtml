@{
    ViewData["Title"] = "All Tests";
}

@model SportsApplication.Models.ViewResultModel

<h1>@Model.TestType Dt.@Model.Date.ToShortDateString()</h1>

<input type="hidden" asp-for="@Model.TestId" />

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Distace<br />(meter)</th>
            <th>Fitness<br />Rating</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < @Model.AtheleteNames.Count(); i++)
        {
            <tr>
                <td><a asp-controller="Result" asp-action="EditResult" asp-route-Id="@Model.AtheleteNames.ElementAt(i).Id">@(i + 1). @Model.AtheleteNames.ElementAt(i).Name</a></td>
                <td>@Model.AtheleteNames.ElementAt(i).Data</td>
                <td>@Model.AtheleteNames.ElementAt(i).FitnessRanking</td>
            </tr>
        }
    </tbody>
</table>


<a class="btn btn-primary" asp-controller="Result" asp-action="CreateResult" asp-route-TestId="@Model.TestId">Add New Athelete To Test</a>
<br/>
<br />
<a class="btn btn-danger" asp-controller="Test" asp-action="ConfirmDeleteTest" asp-route-Id="@Model.TestId">Delete Test</a>
