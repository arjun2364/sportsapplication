@{
    ViewData["Title"] = "Create New Test";
}

@model Sports_Application.Models.Test


<form method="post">
    <div class="form-signin">
        <h2 class="form-signin-heading">CREATE NEW TEST</h2>
        <div class="form-group">
            <input type="hidden" asp-for="@Model.CoachId" class="form-control" />
            <label asp-for="@Model.TestType" class="control-label"></label>
            <select asp-for="@Model.TestType" class="form-control">
                <option value="-1" selected disabled>Choose</option>
                <option>Cooper Test</option>
                <option>Sprint Test</option>
            </select>
            <span asp-validation-for="@Model.TestType" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Date"></label>
        <input type="date" asp-for="@Model.Date" class="form-control" />
        <span class="text-danger" asp-validation-for="@Model.Date"></span>
    </div>
    <button type="submit" class="btn btn-primary" asp-all-route-Test=@Model>Create Test</button>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}